<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CardViewActivity"
    android:layout_margin="8dp"
    >

    <!--
    app:cardBackgroundColor 设置卡片的背景色
    app:cardCornerRadius 设置卡片的圆角
    app:cardElevation 设置卡片的阴影
    app:cardUseCompatPadding 是否添加padding
    app:cardPreventCornerOverlap 在v20和v20以前的版本添加padding，防止CardView的内容和圆角相交
    -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        android:elevation="3dp"
        app:cardUseCompatPadding = "true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sakura"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Material Design"
                android:textColor="@color/pink"
                android:layout_marginTop="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/pink_purple"
                android:layout_marginTop="6dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:text=" material metaphor is the unifying theory of a rationalized space and a system of motion."
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16sp"
                >

                <TextView
                    android:id="@+id/text_card1_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple"
                    android:textSize="24sp"
                    android:text="SHARE"
                    />
                <TextView
                    android:id="@+id/text_card1_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple"
                    android:textSize="24sp"
                    android:text="EXPLORE"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/button"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        >
        <TextView
            android:id="@+id/text_card2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Card"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            />
    </android.support.v7.widget.CardView>



</LinearLayout>